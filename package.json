{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@oliversalzburg/js-utils",
  "version": "0.0.4",
  "license": "MIT",
  "author": "Oliver Salzburg <oliver.salzburg@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "default": "./output/index.js"
    },
    "./*.js": {
      "default": "./output/*.js"
    }
  },
  "scripts": {
    "build": "yarn run build:tsc",
    "build:esbuild": "node build.js",
    "build:tsc": "tsc",
    "docs:typedoc": "typedoc --plugin typedoc-plugin-markdown",
    "lint": "yarn run lint:eslint && yarn run lint:tsc",
    "lint:eslint": "eslint source ./*js",
    "lint:tsc": "tsc --noEmit",
    "npm:publish": "npm publish",
    "npm:publish:major": "npm version major && npm publish",
    "npm:publish:minor": "npm version minor && npm publish",
    "npm:publish:patch": "npm version patch && npm publish",
    "prepack": "yarn run build"
  },
  "types": "./output/index.d.ts",
  "devDependencies": {
    "@types/eslint": "8.44.6",
    "@types/node": "20.8.9",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "esbuild": "0.19.5",
    "eslint": "8.52.0",
    "eslint-plugin-jsdoc": "46.8.2",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-organize-imports": "3.2.3",
    "typedoc": "0.25.3",
    "typedoc-plugin-markdown": "3.16.0",
    "typescript": "5.2.2"
  },
  "packageManager": "yarn@4.0.1"
}
